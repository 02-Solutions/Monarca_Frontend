# Forzar carga manual de nvm si no est치 ya disponible
export NVM_DIR="$HOME/.nvm"
if [ -s "$NVM_DIR/nvm.sh" ]; then
  source "$NVM_DIR/nvm.sh"
else
  echo "丘멆잺  No se encontr칩 nvm.sh. 쮼st치 bien instalado nvm?"
fi

# Usar la versi칩n definida en .nvmrc, o crearla si no existe
if [ -f .nvmrc ]; then
  nvm use
else
  echo "22.14.0" > .nvmrc
  nvm install 22.14.0
  nvm use
fi

# Copiar autom치ticamente .env.example a .env si no existe
